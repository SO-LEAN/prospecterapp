{% macro main() %}
    {% set main_menu = knp_menu_get('main', options={'root_class': 'nav navbar-nav', 'child_attributes':{'attributes': {'class': 'nav-item'}, 'linkAttributes': {'class': 'nav-link'}}}) %}
    {{ knp_menu_render(main_menu,  { 'currentClass': 'active'}) }}
{% endmacro %}
{% macro breadcrumb() %}
    {% set breadcrumb = knp_menu_get('breadcrumb', options={'root_class': 'breadcrumb mt-2', 'child_attributes': {'attributes': {'class': 'breadcrumb-item'}}, 'extras': {'wrap_label': 'd-none d-md-inline'}}) %}
    {{ knp_menu_render(breadcrumb, { 'currentClass': 'active'}) }}
{% endmacro %}
{% macro left() %}
