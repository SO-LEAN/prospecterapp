{% macro paginate(route, currentPage, total, extraArgs) %}
    {% set extraArgs = extraArgs|default({}) %}
    {% set is_first, is_last = 1 == currentPage, total == currentPage  %}
    {% if total != 1 %}
        <div class="clearfix">
            <nav class="float-md-right my-sm-2">
                <ul class="pagination">
                    <li class="page-item {{ is_first ? 'disabled' }}">
                        <a class="page-link" href="{{ is_first ? '#' : path(route, {'page': currentPage - 1}|merge(extraArgs)) }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    {% for i in range(1, total) %}
                        <li class="page-item {{ currentPage == i ? 'active' }}"><a class="page-link" href="{{ path(route, {'page': i}|merge(extraArgs)) }}">{{ i }}</a></li>
                    {% endfor %}
                    <li class="page-item {{ is_last ? 'disabled' }}">
                        <a class="page-link" href="{{ is_last ? '#' : path(route, {'page': currentPage + 1}|merge(extraArgs)) }}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    {% endif %}
{% endmacro %}

{% macro searchForm(route, placeHolder) %}
    <form name="search_form" method="get" class="form-inline" action="{{ path(route) }}">
        <input type="text" id="search_form_q" name="q" class="form-control" placeholder="{{ placeHolder }}">
        <button type="submit" class="btn btn-outline-primary ml-0 ml-sm-2 my-2">Search</button>
    </form>
{% endmacro %}
