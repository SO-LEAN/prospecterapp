{% extends 'layout/page-2-col.html.twig' %}
{% block header %}Find organizations{% endblock %}
{% set js_ctrl, page = 'findOrganization', 'organizations' %}
{% import "macro/find.html.twig" as p %}
{% block full_title %}
    <div class="clearfix">
        <h2 class="mt-2 mb-5 text-primary float-lg-left"><i class="fa fa-search"></i> Organizations</h2>
        <div class="float-lg-right mt-2">
            {{ p.searchForm('organization_find', 'name or email') }}
        </div>
    </div>
{% endblock %}
{% block page_body %}
    {%  set pagination = p.paginate('organization_find', data.currentPage, data.totalPages, {'q': app.request.get('q')}) %}
    {{ pagination }}
    <div class="row p-1">
    {% for organization in data.organizations %}
        <div class="card p-2 mb-5 col-xs-12 col-sm-4 col-lg-3">
            <div class="text-right tex-">
                <ul class="list-inline">
                    <li class="list-inline-item"><a href="{{ path('organization_view', {id: organization.id}) }}" title="Detail {{ organization.fullName }}" class="btn btn-secondary"><i class="fa fa-eye" aria-hidden="true"></i></a></li>
                    <li class="list-inline-item"><a href="{{ path('organization_update', {id: organization.id}) }}" title="Edit {{ organization.fullName }}" class="btn btn-secondary"><i class="fa fa-edit" aria-hidden="true"></i></a></li>
                </ul>
            </div>
            <div class="card-body m-auto">
                {% if organization.logo %}
                    <img alt="{{ organization.fullName }}" src="{{ organization.logo|image_operation('resize', 400, 0) }}" class="img-fluid">
                {% else %}
                    <img alt="{{ organization.fullName }}" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22200%22%20height%3D%22250%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20200%20250%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_163093ab250%20text%20%7B%20fill%3A%23eceeef%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A13pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_163093ab250%22%3E%3Crect%20width%3D%22200%22%20height%3D%22250%22%20fill%3D%22%2355595c%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2255.609375%22%20y%3D%22131%22%3EOrganization%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" class="img-fluid">
                {% endif %}
            </div>
            <address class="card-body">
                <strong class="mb-2 text-secondary">Organization</strong>
                <h4 class="mb-0">
                    <a class="text-dark" href="{{ path('organization_view', {id: organization.id}) }}">{{ organization.fullName }}</a>
                </h4>
                <p class="card-text">
                    {{ organization.postalCode }} {{ organization.city }}<br>
                    {{ organization.country }}<br>
                </p>
            </address>
        </div>
    {% else %}
        <p class="m-2 bg-light mb-5">No result.</p>
    {% endfor %}
    </div>
    {{ pagination }}
{% endblock %}
