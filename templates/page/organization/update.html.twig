{% extends 'layout/page-3-col.html.twig' %}
{% block header %}Update Organization{% endblock %}
{% set js_ctrl, page  = 'updateOrganization', 'update-organization'  %}
{% block title %}<i class="fa fa-industry"></i> Update {{ data.corporateName|default(data.email) }}{% endblock %}
{% block page_body %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {% if data.logoUrl %}
    <figure>
        <img alt="{{ data.corporateName }}" src="{{ data.logoUrl }}" width="200">
        <figcaption>logo {{ (data.logoSize)|number_format(0, ',', ' ')}} octets</figcaption>
    </figure>
    {% endif %}
        <input type="submit" class="btn btn-default pull-right" value="Update" />
    {{ form_end(form) }}
{% endblock %}
